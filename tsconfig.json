{
    "compilerOptions": {
        "target": "es2017",
        "module": "es6",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "lib": ["es2017", "dom"],
        "outDir": "out-tsc"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
